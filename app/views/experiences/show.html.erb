<div id="show">
  <div class="city-selected">
    <article>

      <div class="info">
        <br>
        <div class="temp"><%= @experience.title %></div>
        <br><br>
        <div class="wind">
          <span><%= @experience.pais %> - <%= @experience.ciudad %></span>
        </div>
      </div>
    </article>


    <figure>
      <%= image_tag @experience.photos[0].image.url if @experience.photos.length > 0 %>
    </figure>
    
  </div>
</div>


<div id="show_body">
  <div class="col-md-10 col-md-offset-1">
    <div id="background">
      <div class="row-fluid">
        <div class="col-md-6">
          <div id="izq">
            <h4><%= @experience.title %></h4>
            <h6><%= @experience.ciudad %> - <%= @experience.pais %></h6>
            <p><%= @experience.address%></p>
            <br>
            <h5>DESCRIPCIÓN:</h5>
            <p><%= @experience.description %></p>
            <br>
            <div id="icons">
              <div class="row">
                <div class="col-sm-6">
                  <div>
                    <span class="material-icons md-24">mood</span><h6> Experiencia: <%= @experience.expe %></h6>
                  </div>

                  <div>
                    <span class="material-icons md-24">flag</span><h6> Idioma: <%= @experience.idioma %></h6>
                  </div>

                  <div>
                    <span class="material-icons md-24">local_atm</span><h6> Dinero: <%= @experience.money %></h6>
                  </div>

                  <div>
                    <span class="material-icons md-24">monetization_on</span><h6> Moneda: <%= @experience.currency %></h6>
                  </div>

                  <div>
                    <span class="material-icons md-24">timer</span><h6> Tiempo aproximado: <%= @experience.aprox_time %></h6>
                  </div>

                  <div>
                    <span class="material-icons md-24">face</span><h6> Gente: <%= @experience.gente %></h6>
                  </div>

                </div>

                <div class="col-sm-6">

                  <% if !@experience.is_risky? %> 
                  <div>
                    <span class="material-icons md-24">lock_outline</span><h6> Lugar Seguro</h6>
                  </div>
                  <% end %>

                  <% if @experience.is_internet? %> 
                  <div>
                    <span class="material-icons md-24">web</span><h6> Tiene Internet</h6>
                  </div>
                  <% end %>

                  <% if @experience.is_reservation? %> 
                  <div>
                    <span class="material-icons md-24">receipt</span><h6> Requiere Reservación</h6>
                  </div>
                  <% end %>

                  <div>
                    <span class="material-icons md-24">dvr</span><h6> Website: <br> <%= @experience.website %></h6>
                  </div>

                </div>
              </div>
            </div>



            <br>
            <h5>CONSEJO:</h5>
            <p><%= @experience.advice %></p>
          </div>
        </div>

        <div class="col-md-6">
          <div id="sentidos">
            <div class="row">
              <ul>
                <li>
                  <div class="day">
                    <h1><%= @experience.vista %><br> <i class="material-icons md-48">remove_red_eye</i></h1>
                  </div>
                </li>
                <!--  -->
                <li>
                  <div class="day">
                    <h1><%= @experience.olfato %><br> <i class="material-icons md-48">local_florist</i></h1>
                  </div>
                </li>
                <!--  -->
                <li>
                  <div class="day">
                    <h1><%= @experience.oido%> <br><i class="material-icons md-48">hearing</i></h1>
                  </div>
                </li>
                <!--  -->
                <li>
                  <div class="day">
                    <h1><%= @experience.gusto%> <br><i class="material-icons md-48">local_pizza</i></h1>
                  </div>
                </li>
                <!--  -->
                <li>
                  <div class="day">
                    <h1><%= @experience.tacto%> <br><i class="material-icons md-48">pan_tool</i></h1>
                  </div>
                </li>

              </ul>
            </div>
          </div>

          <!-- Carousel -->
          <div id="myCarousel" class="carousel slide" data-ride="carousel">

            <% if @photos %>
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <% @photos.each do |photo| %>
              <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
              <% end %> 
            </ol>       
            <% end %>     

            <div class="carousel-inner" role="listbox">
              <% if @photos %>        
              <% @photos.each do |photo| %>
              <div class="item <%= 'active' if photo.id == @photos[0].id %>">          
                <%= image_tag photo.image.url() %>
              </div>
              <% end %> 
              <% end %>
            </div>

            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          <!-- End Carousel -->
          <div class="row">
            <%= render 'shared/share' %>          
          </div>

        </div>
      </div>
    </div>

    <!-- Google Map -->
    <div class="row">
      <div class="col-md-12">

        <div id="map"></div>

        <style>
          #map {
            margin-top: 4rem;
            width: 100%;
            height: 400px;
          }
        </style>

        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCCXph4Sx9MklyoSlZ4JH-FCryYgRRgWi4&callback=initialize"
        async defer></script>
        <script>
          function initialize() {
            var mapCanvas = document.getElementById('map');
            var mapOptions = {
              center: new google.maps.LatLng(<%= @experience.latitude %>, <%= @experience.longitude %>),
              scrollwheel: false,
              zoom: 10,
              mapTypeId: google.maps.MapTypeId.ROADMAP
            }
            var map = new google.maps.Map(mapCanvas, mapOptions);

            var marker = new google.maps.Marker({
              position: new google.maps.LatLng(<%= @experience.latitude %>, <%= @experience.longitude %>),
              title: "Nomada5" 
            });

            marker.setMap(map);
          }
          google.maps.event.addDomListener(window, 'load', initialize);
        </script>


      </div>
    </div>

    <!-- Reviews -->
    <div class="row">
      <div class="col-md-12">
        <h3>Reseñas: <%= @experience.average_rating %> (<%= @reviews.count %>)</h3>
        <div class="container">
          <div>
            <%= render 'review/review' %>
          </div>
          <div>
            <%= render 'review/list' %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>



    <!-- Close by Rooms -->
    <div class="container">
    <div class="row">
    <h3 class="center upper">Near by</h3>
    <hr>
      <% for experience in @experience.nearbys(10) %>
      <%= render 'nearbys' %>

      

      <% end %>
    </div>
    </div>


